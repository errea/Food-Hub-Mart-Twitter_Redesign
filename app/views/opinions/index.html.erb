<div class="row">
	<div class="col">
		<nav class="navbar navbar-expand-lg navbar-light">
  			<div class="container">
  				<%= link_to 'Tweet', '#', class: "navbar-brand active border-bottom border-primary" %>
    			
  			</div>
		</nav>
</div>
</div>

<h3 class="mt-4"> Suggest BooK-Hubs </h3>

<div class="card mb-3">
    <div class="card-body">
        <%= form_for(@opinion, url: opinion_path) do |f| %>
            <%= f.text_field :text, autofocus: true, class: "form-control", placeholder: "Suggest any book-hub by tweet ..." %>
            <div class="actions">
          <%= f.submit class: "btn btn-primary float-right m-3" %>
        </div>
        <% end %>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title pb-2">Suggested BooK-Hubs</h5>
        <%= render @opinions %>
    </div>
</div>
